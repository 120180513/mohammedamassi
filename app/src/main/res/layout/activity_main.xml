<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="الرئيسية"
        app:titleTextColor="@color/white_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonHistory"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="تاريخ المدينة"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

            <Button
                android:id="@+id/buttonLandmarks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="معالم المدينة"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

            <Button
                android:id="@+id/buttonNeighboringTowns"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="البلدات المجاورة للمدينة"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

            <Button
                android:id="@+id/buttonDoors"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="ابواب المدينة"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

            <Button
                android:id="@+id/buttonNews"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="اخر الاخبار"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

            <Button
                android:id="@+id/buttonAddArticle"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="اضافة مقال"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="الاعدادات"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white_toolbar"
                android:background="@drawable/shape_main"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>